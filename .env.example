# ============================================
# VARIABLES DE ENTORNO - POSTGRESQL
# ============================================

# Base de Datos PostgreSQL
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=viatges_db

# Flask
SECRET_KEY=tu_clave_secreta_super_secreta
FLASK_ENV=development

# Duffel (si usas)
DUFFEL_API_TOKEN=tu_token_duffel

# Caché y refresco diario de precios del calendario de vuelos
CALENDAR_PRICE_CACHE_TTL_SECONDS=86400
CALENDAR_ENABLE_DAILY_REFRESH=true
CALENDAR_REFRESH_HOUR_UTC=3
CALENDAR_REFRESH_MINUTE_UTC=15
# Rutas para precalentar diariamente (formato IATA-IATA separadas por coma)
# Ejemplo: CALENDAR_PREWARM_ROUTES=VLC-PMI,MAD-LON,BCN-ROM
CALENDAR_PREWARM_ROUTES=
# Cuántas rutas top (últimos 30 días) cargar automáticamente desde analytics (DuffelSearch)
CALENDAR_PREWARM_TOP_ROUTES_LIMIT=40

# Otros servicios
# AMADEUS_API_KEY=tu_key
# AMADEUS_API_SECRET=tu_secret
# Si Duffel está dentro de este % del mejor precio, se prioriza en el orden de resultados
DUFFEL_PRIORITY_DELTA_PERCENT=5
